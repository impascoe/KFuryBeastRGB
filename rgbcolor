#!/bin/bash

ram1addr=0x60
ram2addr=0x61
ram3addr=0x62
ram4addr=0x63

red=0xff
green=0x3a
blue=0x00

# red=0x00
# green=0x00
# blue=0x00

i2cset -y 0 $ram1addr 0x08 0x53
sleep 0.020
i2cset -y 0 $ram1addr 0x09 0x00
sleep 0.020
i2cset -y 0 $ram1addr 0x31 $red
sleep 0.020
i2cset -y 0 $ram1addr 0x32 $green
sleep 0.020
i2cset -y 0 $ram1addr 0x33 $blue
sleep 0.020
i2cset -y 0 $ram1addr 0x08 0x44

sleep 0.020
i2cset -y 0 $ram2addr 0x08 0x53
sleep 0.020
i2cset -y 0 $ram2addr 0x09 0x00
sleep 0.020
i2cset -y 0 $ram2addr 0x31 $red
sleep 0.020
i2cset -y 0 $ram2addr 0x32 $green
sleep 0.020
i2cset -y 0 $ram2addr 0x33 $blue
sleep 0.020
i2cset -y 0 $ram2addr 0x08 0x44

sleep 0.020
i2cset -y 0 $ram3addr 0x08 0x53
sleep 0.020
i2cset -y 0 $ram3addr 0x09 0x00
sleep 0.020
i2cset -y 0 $ram3addr 0x31 $red
sleep 0.020
i2cset -y 0 $ram3addr 0x32 $green
sleep 0.020
i2cset -y 0 $ram3addr 0x33 $blue
sleep 0.020
i2cset -y 0 $ram3addr 0x08 0x44

sleep 0.020
i2cset -y 0 $ram4addr 0x08 0x53
sleep 0.020
i2cset -y 0 $ram4addr 0x09 0x00
sleep 0.020
i2cset -y 0 $ram4addr 0x31 $red
sleep 0.020
i2cset -y 0 $ram4addr 0x32 $green
sleep 0.020
i2cset -y 0 $ram4addr 0x33 $blue
sleep 0.020
i2cset -y 0 $ram4addr 0x08 0x44

